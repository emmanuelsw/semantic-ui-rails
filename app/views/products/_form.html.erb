<%= simple_form_for(product, local: true, html: { class: 'ui form' }) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.input_field :name, id: :product_name %>
    <%= form.full_error :name %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.input_field :body, id: :product_body %>
    <%= form.full_error :body %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.input_field :price, id: :product_price %>
    <%= form.full_error :price %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.input_field :date, as: :string, id: :product_date %>
    <%= form.full_error :dates %>
  </div>
  <div class="field">
    <%= form.label :category %>
    <%= form.input_field :category_id, collection: Category.all, prompt: "Choose a category" %>
    <%= form.full_error :category %>
  </div>

  <div class="actions">
    <%= form.button :submit, nil, class: "ui green button" %>
  </div>
<% end %>
